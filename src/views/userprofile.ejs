<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <link rel="stylesheet" href="../stylesheets/formsadmin.css">
    <link rel="stylesheet" href="../stylesheets/userprofile.css">
</head>

<body>
  <header>
    <%- include('./partials/nav') %>
  </header>
  <main>
    <div class="container-profile">
      <div>
          <div class="profile-card">
              <div class="profile-card-header">
                  <div class="avatar-card-photo">
                      <img src="<%= user.image %>" alt="avatar">
                  </div>
              </div>
              <div class="profile-card-body">
                  <h3 class="profile-card-name"><%= user.fullname %> </h3>
                  <p class="profile-card-description"> <br/><%= user.email %> </p>
                  <div class="card-button">
                      <button class="btn btn-primary"><a href="/">Home</a></button>
                      <button class="btn btn-outline-primary">  <a href="/shop">Shop</a></button>
                  </div>

              </div>
          </div>
      </div>
  </div>
  </main>
  <%- include('./partials/footer') %>
</body>
</html>