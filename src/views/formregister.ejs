<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/formslogin.css" />
</head>

<body>
    <header>
        <%- include('./partials/nav') %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </header>
    <main>
        <div class="hero">
            <div class="form-box">
                <div class="button-box">
                    <div class="btn-register"></div>
                    <a href="/login"><button type="button" class="toggle-btn">Iniciar Sesion</button></a>
                    <button type="button" class="toggle-btn">Registro</button>
                </div>
                <div class="social-icons">
                    <img src="/images/formslogin/fb.png" alt="facebook-icon" />
                    <img src="/images/formslogin/tw.png" alt="twitter-icon" />
                    <img src="/images/formslogin/gp.png" alt="google-icon" />
                </div>
                <form action="/" method="POST" class="input-group" id="register" autocomplete="off">
                    
                    <% if(typeof validations != 'undefined') { %>
                        <% validations.forEach((validation) => { %>
                            <p><%= validation.msg %> </p>
                            <% }) %>
                            <% } %>
                            <label for="name"></label>
                            <input type="text" name="fullname" class="input-field" placeholder="Nombre Completo"/>
                            <div class="input-field">
                                <label for="avatar"> <i class="fas fa-plus"></i>Imagen de Perfil</label>
                                <input type="file" clas 
                                id="avatar" name="avatar"
                                accept="image/png, image/jpeg">
                            </div>
                            <label for="email"></label>
                            <input type="email" name="email" class="input-field" placeholder="Email"/>
                            <label for="password"></label>
                            <input  name="password" type="password" nametype="text" class="input-field" placeholder="ContraseÃ±a"/>
                            <input id="accept" name="accept" type="checkbox" class="check-box" />
                            <a class="to-terms" href="/terms"><span class="form-span">Acepto terminos y condiciones</span></a>
                            <button type="submit" class="submit-btn">Registrarse</button>
                        </form>
                    </div>
                </div>
            </main>
            
            <%- include('./partials/footer') %>
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <!-- Include all compiled plugins (below), or include individual files as needed -->
            <script src="js/bootstrap.min.js"></script>
        </body>
        
        </html>